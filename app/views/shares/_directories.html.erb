<style>
#all-container span.name {
    display: inline-block;
}

#all-container span.path {
    color: #888888;
    display: block;
    font-size: 14px;
}
</style>


<h2 class="mheading green">
  HOME Directories (Local Files)
  <p style="color:#889; font-size:12px;">
    {Info} Show all directories in users home  --> TODO: Implement navigation inside listed directories
    List also custom shared folders
  </p>
</h2>
<% @dirs.each do |name, val| %>
  <div class="link beforelink">
    <div class='key'>
      <% name %>
      <% val["path"] %>
      <span class="name"><%= name.upcase %></span>
      <span class="path"><%= val["path"] %></span>
    </div>
    <div class='value'>
      <a  href="#" class="btn greenbtn sumit" data-form="newform">SHARE</a>
    </div>
  </div>
<% end %>


