<script>
  jQuery(document).ready(function() {
    $('[type=checkbox].ftoggle').slider({on: "running", off: "unused", size: 180});
  });
</script>

<div>
  <div class="container_12 mhead">
    <div class="grid_2 blcontainer">
      <a href="/" id="back" class="button">BACK</a>
    </div>

    <div class="grid_8">
      <h2>DLNA-Server configuration</h2>
      <h4>Stream your videos, music and photos to any device over a home network.</h4>
    </div>

    <div class="grid_2 brcontainer">
      <a href="/" id="submit" class="button">SAVE</a>
    </div>
  </div>

  <div class="clear"></div>

  <div class="container_12 mbody">
    <div class="mstatus">
      <div class="grid_6">
        <p class="left">
          <img src="/images/dlna-sym.png" alt="Expanded" border="0" />
          DLNA status:
        </p>
      </div>
      <div class="grid_6 right">
        <%= check_box("samba", "status", { :class => 'ftoggle' }) %>
      </div>
      <div class="clear"></div>
    </div>



    <div class="grid_12">
      <div id="mcontent" class="mcontent">
        <% form_remote_for @dlna, :url => {:action => 'update'},
          :before => "$('#wait').show(); console.log('wait');",
          :after => "console.log('finished'); expand($(this)); $('#wait').fadeOut('slow');",
          :update =>'mform' do |form| %>

        <%= form.hidden_field :id %>

        <div class="">
          <h2 style="background:none; margin-bottom:10px; border-bottom:3px solid #A1B7A7; color:#575757;">Settings</h2>
        </div>

        <div class="line">
          <div class='key'> <%= form.label :friendly_name %> </div>
          <div class='value'>
            <%= @dlna.friendly_name %>
          </div>
        </div>

        <div class="line">
          <div class='key'> <%= form.label :inotify %> </div>
          <div class='value'>
            <%= @dlna.inotify %>
          </div>
        </div>

        <div class="">
          &nbsp;
        </div>

        <div class="">
          <h2 style="background:none; margin-bottom:10px; border-bottom:3px solid #C79E61; color:#575757;">Folders</h2>
        </div>

        <div class="line">
          <div class='key'>
            <img src="/images/audio-sym.png" style="height: 30px; width:30px; " alt="Expanded" border="0" />
            <%= form.label "Audio" %>
          </div>
          <div class='value'>
            <%= @dlna.media_dir1 %>
          </div>
        </div>

        <div class="line">
          <div class='key'>
            <img src="/images/video-sym.png" style="height: 30px; width:30px; " alt="Expanded" border="0" />
            <%= form.label "Video" %>
          </div>
          <div class='value'>
            <%= @dlna.media_dir2 %>
          </div>
        </div>

        <div class="line">
          <div class='key'>
            <img src="/images/photo-sym.png" style="height: 30px; width:30px; " alt="Expanded" border="0" />
            <%= form.label "Photo" %>
          </div>
          <div class='value'>
            <%= @dlna.media_dir3 %>
          </div>
        </div>
<% end %>


      </div>
    </div>
  </div>

  <div class="clear"></div>

</div>


